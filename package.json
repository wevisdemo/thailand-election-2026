{
	"name": "thailand-election-2026",
	"version": "1.0.0",
	"description": "Monorepo for Thailand Election 2026 projects",
	"author": "WeVis",
	"type": "module",
	"packageManager": "pnpm@10.25.0",
	"scripts": {
		"prepare": "husky",
		"build": "turbo run build",
		"dev:landing": "turbo run dev --filter=@election/landing",
		"dev:partymatch": "turbo run dev --filter=@election/partymatch",
		"dev:politicalflashback": "turbo run dev --filter=@election/politicalflashback"
	},
	"dependencies": {
		"turbo": "^2.6.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@commitlint/config-pnpm-scopes": "^20.1.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"prettier": "^3.7.3",
		"prettier-plugin-tailwindcss": "^0.7.2"
	},
	"lint-staged": {
		"*": "prettier --write --ignore-unknown"
	}
}
