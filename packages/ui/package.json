{
	"name": "@election/ui",
	"version": "1.0.0",
	"description": "Stencil Component Starter",
	"main": "dist/index.cjs.js",
	"module": "dist/index.js",
	"scripts": {
		"dev": "stencil build --dev --watch --serve --no-open",
		"build": "mkdir -p .tmp && stencil build && pnpm run \"/^build:.*/\"",
		"build:react": "tsc -p tsconfig.react.json",
		"build:svelte": "tsc -p tsconfig.svelte.json && cp -r .tmp/svelte/svelte/ dist/svelte",
		"build:vue": "tsc -p tsconfig.vue.json",
		"stencil": "stencil"
	},
	"types": "dist/types/index.d.ts",
	"collection": "dist/collection/collection-manifest.json",
	"exports": {
		".": {
			"import": "./dist/election/election.esm.js",
			"require": "./dist/election/election.cjs.js"
		},
		"./loader": {
			"import": "./dist/loader/index.js",
			"require": "./dist/loader/index.cjs",
			"types": "./dist/loader/index.d.ts"
		},
		"./vue": {
			"import": "./dist/vue/components.js",
			"types": "./dist/vue/components.d.ts"
		},
		"./svelte": {
			"types": "./dist/svelte/components.d.ts",
			"svelte": "./dist/svelte/index.js"
		},
		"./react": {
			"import": "./dist/react/components.js",
			"types": "./dist/react/components.d.ts"
		}
	},
	"dependencies": {
		"@election/constants": "workspace:*",
		"@election/tailwind": "workspace:*",
		"@revolist/svelte-output-target": "workspace:*",
		"@stencil/core": "^4.27.1",
		"@stencil/react-output-target": "^1.2.0",
		"@stencil/vue-output-target": "^0.11.8",
		"@tailwindcss/postcss": "^4.1.17",
		"react": "^19.2.1",
		"stencil-tailwind-plugin": "^2.0.5",
		"tailwind-merge": "^3.4.0",
		"tailwindcss": "^4.1.17",
		"typescript": "^5.9.3"
	},
	"devDependencies": {
		"@types/node": "^22.13.5"
	}
}
